{
    "name": "bravecollective/brave-forums-auth",
    "description": "Invision Power Board v4 Auth connector for Brave Core",
    "keywords": [
        "eve",
        "ipb",
        "brave-core",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "laravel/framework": "5.0.*",
        "illuminate/html": "5.0.*",
        "bravecollective/php-api": "dev-master",
        "necrotex/laravel-brave-core": "0.*",
        "doctrine/dbal": "~2.4",
        "guzzlehttp/guzzle": "~5.0.",
        "bjeavons/zxcvbn-php": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bravecollective/php-api"
        }
    ],
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
